<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSetActivity"
    tools:context="com.fast.weather.SetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_cityName"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="@string/edit_cityName_text"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_edit"
            android:textSize="20sp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/send_text"
            android:textSize="20sp"
            android:background="@drawable/rounded_send"
            android:layout_weight="2"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <ListView
        android:id="@+id/set_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
